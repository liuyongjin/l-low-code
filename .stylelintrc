{
  "extends": ["stylelint-config-standard", "stylelint-config-recess-order"],
  "plugins": [
		"@stylistic/stylelint-plugin"
	],
  "rules": {
    "@stylistic/indentation": 2,
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen"
        ]
      }
    ]
  }
}
